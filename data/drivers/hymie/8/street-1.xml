<!DOCTYPE params SYSTEM "../../../../src/libs/tgf/params.dtd">

<params name="Viper GTS-R" type="template">

	<section name="hymie">
		<attnum name="WingRInverse" val="0.0006"/>
		<attnum name="TireAccel" min="1.0" max="30.0" val="12.0"/>
		<attnum name="MaxBrake" min="1.0" max="60.0" val="20.5"/>
		<attnum name="CurveFactor" min="0.0" max="1.0" val="0.13"/>
		<attnum name="BTBoost" min="0.0" max="10.0" val="1.0"/>
		<attnum name="ExtMargin" min="0.0" max="10.0" val="1.20"/>
		<attnum name="IntMargin" min="0.0" max="10.0" val="1.55"/>
		<attnum name="SteerGain" min="0.0" max="10.0" val="1.60"/>
		<attnum name="SteerSkid" min="0.0" max="10.0" val="0.08"/>
		<attnum name="SteerGainDiv" min="0.0" max="10.0" val="60"/>
		<attnum name="TurnDecel" min="0.0" max="1.5" val="1.5"/>
		<attnum name="LoadSVG" min="0.0" max="10.0" val="4.0"/>
	</section>

  <section name="Front Wing">
    <attnum name="angle" unit="deg" min="0" max="30" val="0.0"/>
  </section>

  <section name="Rear Wing">
    <attnum name="angle" unit="deg" min="0" max="30" val="0.0"/>
  </section>

  <section name="Gearbox">
    <section name="gears">
      <section name="r">
        <attnum name="ratio" min="-3" max="0" val="-2.5"/>
      </section>
    </section>
	</section>

  <section name="Brake System">
    <attnum name="front-rear brake repartition" min="0.3" max="0.7" val="0.49"/>
    <attnum name="max pressure" unit="kPa" min="100" max="150000" val="44000"/>
  </section>

</params>














